<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#292828">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/song_image"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_guitar" />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/song_image"
        android:layout_centerVertical="true"
        android:background="@mipmap/previous"
        android:layout_alignTop="@+id/song_image" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/pause_item"
        android:contentDescription="play"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@+id/song_image"
        android:layout_toRightOf="@+id/previous" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@mipmap/next"
        android:layout_alignTop="@+id/song_image"
        android:layout_alignParentRight="false"
        android:layout_toRightOf="@+id/pause" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/song_name"
        android:layout_toRightOf="@+id/song_image"
        android:layout_toEndOf="@+id/song_image"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_below="@+id/previous" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCloseNotification"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignTop="@+id/song_image"
        android:layout_alignLeft="@+id/song_image" />

</RelativeLayout>