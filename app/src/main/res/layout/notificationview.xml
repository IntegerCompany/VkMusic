<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#292828">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/song_image"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_guitar" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/song_image"
        android:layout_alignTop="@+id/song_image"
        android:id="@+id/linearLayout">

        <ImageButton
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_centerVertical="true"
            android:background="@mipmap/previous" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/play_item"
            android:contentDescription="play"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pause"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/play"
            android:layout_centerVertical="true"
            android:background="@mipmap/next" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/song_name"
        android:layout_below="@+id/linearLayout"
        android:layout_toRightOf="@+id/song_image"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp" />

</RelativeLayout>