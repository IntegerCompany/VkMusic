<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/listViewItemBackground"
    android:id="@+id/player_line"
   >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/secondaryTextColor"
        android:id="@+id/iv_divider" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/iv_close_panel"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:padding="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the song"
        android:id="@+id/tv_name_of_song_player"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Author"
        android:id="@+id/tv_author_name_player"
        android:layout_below="@+id/tv_name_of_song_player"
        android:layout_marginLeft="16dp"
        android:textSize="12sp"
        android:maxLines="1"
        android:textColor="@color/secondaryTextColor"
        />

    <TextView
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:id="@+id/tv_current_time_player_line"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="66dp" />
</RelativeLayout>