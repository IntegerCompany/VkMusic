<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeight"
    android:background="@color/listViewItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">


    <ImageView
        android:id="@+id/btn_play_pause_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@mipmap/play_item" />

    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/tv_song_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/btn_play_pause_item"
        android:layout_toLeftOf="@+id/tv_duration_item"
        />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/tv_author_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/tv_song_name_item"
        android:text="Name of the song and many more interesting information that is too long"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:layout_below="@+id/tv_song_name_item"
        android:layout_toLeftOf="@+id/tv_duration_item"
        android:textColor="@color/secondaryTextColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3:03"
        android:id="@+id/tv_duration_item"
        android:layout_toLeftOf="@+id/btn_add_item"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/btn_add_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="16dp"
        android:src="@mipmap/add"
        android:layout_toLeftOf="@+id/btn_download_item"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_download_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="16dp"
        android:src="@mipmap/download"
        android:layout_alignParentRight="true" />
</RelativeLayout>
