<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="AppTheme.Base.Cyan.Lime" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/styleCyanPrimary</item>
        <item name="colorPrimaryDark">@color/styleCyanPrimaryDark</item>
        <item name="colorAccent">@color/styleLime</item>
    </style>

    <style name="AppTheme.Base.BlueGrey.Pink" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/styleBlueGreyPrimary</item>
        <item name="colorPrimaryDark">@color/styleBlueGreyPrimaryDark</item>
        <item name="colorAccent">@color/stylePink</item>
    </style>

    <style name="AppTheme.Base.Amber.Purple" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/styleAmberPrimary</item>
        <item name="colorPrimaryDark">@color/styleAmberPrimaryDark</item>
        <item name="colorAccent">@color/stylePurple</item>
    </style>

    <style name="AppTheme.Base.DeepOrange.Orange" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/styleDeepOrangePrimary</item>
        <item name="colorPrimaryDark">@color/styleDeepOrangePrimaryDark</item>
        <item name="colorAccent">@color/styleOrange</item>
    </style>.

    <style name="AppTheme.Base.DeepPurple.Pink" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/styleDeepPurplePrimary</item>
        <item name="colorPrimaryDark">@color/styleDeepPurplePrimaryDark</item>
        <item name="colorAccent">@color/stylePink</item>
    </style>

    <style name="AppTheme.Base.Green.Blue" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/styleGreenPrimary</item>
        <item name="colorPrimaryDark">@color/styleGreenPrimaryDark</item>
        <item name="colorAccent">@color/styleBlue</item>
    </style>.


    <style name="My.Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyTabLayoutTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>







</resources>
